{% extends 'base.html.twig' %}

{% block titlePage %}
	<h1> Inscription </h1>
{% endblock %}

{% block body %}
<div class="edit-mat">
	<h2>Inscription</h2>

	<form class = "custom-form" action="{{ path('register') }}" method="post">
		{{ form_start(form) }}
		<div class="form-group">
			{{ form_label(form.lastname, 'Nom :') }}
			{{ form_widget(form.lastname, {'attr': {'class': 'custom-input'}}) }}
		</div>

		<div class="form-group">
			{{ form_label(form.firstname, 'Prénom :') }}
			{{ form_widget(form.firstname, {'attr': {'class': 'custom-input'}}) }}
		</div>

		<div class="form-group">
			{{ form_label(form.username, 'Nom d\'utilisateur :') }}
                {{ form_widget(form.username, {'attr': {'class': 'custom-input'}}) }}
            </div>

            <div class="form-group">
                {{ form_label(form.password, 'Mot de passe :') }}
                {{ form_widget(form.password, {'attr': {'class': 'custom-input'}}) }}
            </div>

            <div class="form-group">
                {{ form_label(form.roles, 'Rôles :') }}
                {{ form_widget(form.roles, {'attr': {'class': 'custom-input'}}) }}
            </div>

            <div class="form-group">
                {{ form_widget(form.save, {'attr': {'class': 'custom-button'}}) }}
            </div>
            {{ form_end(form) }}
        </form>
    </div>
{% endblock %}
