{% extends 'base.html.twig' %}

{% block titlePage %}
	<h1> Créer un compte utilisateur </h1>
{% endblock %}


{% block body %}
<div class="edit-mat">
	<h1>Créer un compte</h1>

	{{ form_start(form, {'attr': {'class': 'custom-form'}}) }}
	<div class="form-group">
		{{ form_label(form.lastname, 'Nom', {'label_attr': {'class': 'required'}}) }}
		{{ form_widget(form.lastname, {'attr': {'class': 'custom-input'}}) }}
	</div>

	<div class="form-group">
		{{ form_label(form.firstname, 'Prénom', {'label_attr': {'class': 'required'}}) }}
		{{ form_widget(form.firstname, {'attr': {'class': 'custom-input'}}) }}
	</div>

	<div class="form-group">
		{{ form_label(form.username, 'Nom d\'utilisateur', {'label_attr': {'class': 'required'}}) }}
            {{ form_widget(form.username, {'attr': {'class': 'custom-input'}}) }}
        </div>

        <div class="form-group">
            {{ form_label(form.password, 'Mot de passe', {'label_attr': {'class': 'required'}}) }}
            {{ form_widget(form.password, {'attr': {'class': 'custom-input'}}) }}
        </div>

        <div class="form-group-divid">
            <div class="form-group-divid2">
                {{ form_label(form.roles, 'Rôles', {'label_attr': {'class': 'required'}}) }}
                {{ form_widget(form.roles, {'attr': {'class': 'custom-select'}}) }}
            </div>
            <div class="form-group-divid2">
                {{ form_label(form.deactivate, 'Désactiver', {'label_attr': {'class': 'required'}}) }}
                {{ form_widget(form.deactivate, {'attr': {'class': 'custom-input'}}) }}
            </div>
        </div>

        <div class="form-group">
            {{ form_widget(form.save, {'label': 'Créer', 'attr': {'class': 'custom-button'}}) }}
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}
