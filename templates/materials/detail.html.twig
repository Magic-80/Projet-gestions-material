{% extends 'base.html.twig' %}

{% block title %} Detail Material {% endblock %}

{% block body %}
	<section class="material_history">
		<table>
			<thead>
				<tr>
					<th>Element</th>
					<th>N° étiquette</th>
					<th>N° de serie</th>
					<th> Disponibilité </th>
					<th>Emprunteur</th>
					<th>Commentaire</th>
				</tr>
			</thead>
			<tbody>
				{% for material in materials %}
					<tr>
						<td>{{ material.name }}</td>
						<td> {{material.tagNumber}} </td>
						<td> {{material.serialNumber}} </td>
						<td> 
							{% if material.relatedTo is not empty %}
								Disponible
							{% else %}
								Pas Disponible
							{% endif %}
						 </td>
						<td>
							{% if material.relatedTo is not empty and material.relatedTo.first.student.firstname %}
								{{ material.relatedTo.first.student.firstname }}
							{% else %}
								-
							{% endif %}
						</td>
						<td>{{ material.comment }}</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>

	</section>
{% endblock %}
